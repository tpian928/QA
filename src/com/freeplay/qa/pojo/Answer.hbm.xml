<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.
0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.freeplay.qa.pojo.Answer" table="answer">
		<id name="aid" type="java.lang.Integer" column="aid">
			<!-- 主键生成 -->
			<generator class="increment"></generator>
		</id>
		<property name="uid" type="int" column="uid"></property>
		<property name="qid" type="int" column="qid"></property>
		<property name="acontent" type="string" column="acontent"
			length="5000"></property>
		<property name="alevel" type="int" column="alevel"></property>
		<property name="atime" type="date" column="atime"></property>
		<property name="alike" type="int" column="alike"></property>
	</class>
</hibernate-mapping>